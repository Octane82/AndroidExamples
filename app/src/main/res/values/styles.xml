<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>


    <!-- this is a button custom buttons style -->
    <style name="Widget.Button.Custom" parent="android:Widget.Button">
        <item name="android:textColor">#ec1919</item>
    </style>


    <!-- this is a custom text views style -->
    <style name="Widget.TextView.Custom" parent="android:Widget.TextView">
        <item name="android:textColor">#5778ef</item>
    </style>



    <style name="LargeFont">
        <item name="android:textSize">40sp</item>
    </style>


</resources>
